<h1>Listing tag_relations</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Pile</th>
      <th>Deck</th>
      <th>Synergy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_relations.each do |tag_relation| %>
      <tr>
        <td><%= tag_relation.tag_id %></td>
        <td><%= tag_relation.pile_id %></td>
        <td><%= tag_relation.deck_id %></td>
        <td><%= tag_relation.synergy_id %></td>
        <td><%= link_to 'Show', tag_relation %></td>
        <td><%= link_to 'Edit', edit_tag_relation_path(tag_relation) %></td>
        <td><%= link_to 'Destroy', tag_relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag relation', new_tag_relation_path %>
